# ;; -*- mode: sh -*- 
# this is my .zshrc ... it uses oh-my-zsh
# which you can install with: curl -L http://install.ohmyz.sh | sh
# for more info: https://github.com/robbyrussell/oh-my-zsh

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

export ZSH_THEME="blinks"

# Uncomment the following line to enable command auto-correction.
# ENABLE_CORRECTION="true"

plugins=(git ssh-agent golang themes)

source $ZSH/oh-my-zsh.sh

export PLATFORM=`uname` 
if [ "$PLATFORM" = "Linux" ]; then 
	alias open="xdg-open"
fi

# auto completion should be case sensitve
CASE_SENSITIVE="true"

# User configuration

export GOPATH=~/Documents/Code/go
export PATH="$GOPATH/bin:/usr/local/go/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/usr/bin/site_perl:/usr/bin/vendor_perl:/usr/bin/core_perl"

# The next line updates PATH for the Google Cloud SDK.
if [ -d ~/google-cloud-sdk ]; then
	source '/home/troden/google-cloud-sdk/path.zsh.inc'
	export CLOUDSDK_PYTHON=`which python2.7` 
fi
