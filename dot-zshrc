# ;; -*- mode: sh -*- 
# this is my .zshrc ... it uses oh-my-zsh
# which you can install with: curl -L http://install.ohmyz.sh | sh
# for more info: https://github.com/robbyrussell/oh-my-zsh

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

export ZSH_THEME="agnoster" # flazz"

# Uncomment the following line to enable command auto-correction.
# ENABLE_CORRECTION="true"

plugins=(git ssh-agent golang themes)

# auto completion should be case sensitve
CASE_SENSITIVE="true"

# User configuration

export GOPATH=~/Documents/Code/go
export PATH="/usr/local/bin:/bin:/usr/bin:/usr/sbin:/sbin:/usr/local/sbin:$GOPATH/bin:/usr/local/go/bin:"

# The next line enables bash completion for gcloud.
source $ZSH/oh-my-zsh.sh
export PS1="%{$YELLOW_BOLD%}%~%u$(parse_git_dirty)$(git_prompt_ahead)%{$RESET_COLOR%}
%{$BLUE%}>%{$RESET_COLOR%} " 
export PLATFORM=`uname` 
if [ "$PLATFORM" = "Linux" ]; then 
	alias open="xdg-open"
fi

alias e="emacsclient -n"

export ANDROID_HOME=~/Library/Android/sdk
# The next line updates PATH for the Google Cloud SDK.
source '/Users/troden/google-cloud-sdk/path.zsh.inc'
